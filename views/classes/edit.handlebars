{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<div class="card card-body">
    <h3>Edit Class</h3>
    <form action="/classes/{{classes.id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Class Name</label>
            <input type="text" class="form-control" value="{{classes.title}}" name="title" required>
        </div>
        <div class="form-group">
            <select class="custom-select" name="semester">
                {{#select classes.semester}}
                <option value="Spring '18'" selected>Spring '18</option>
                <option value="Summer '18">Summer '18</option>
                <option value="Fall '18">Fall '18</option>
                <option value="Winter '18">Winter '18</option>
                {{/select}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>