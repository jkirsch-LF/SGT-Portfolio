{{#each classes}}

<div class="card card-body mb-2  flex-row justify-content-between d-none d-md-flex">
    <div class="p-2">
        <h2>{{title}}</h2>
        <p>{{semester}}</p>
    </div>
    <div class="p-4 flex-row">
        {{!--
        <button class="btn btn-success mx-1 " data-toggle="collapse" data-target="#{{id}}add" aria-expanded="true" aria-controls="collapseOne">
            Add Student
        </button> --}}
        <div style="display:inline">
            <a href="/students/add/{{id}}" class="btn btn-success mx-1">Add Student</a>
        </div>

        <button class="btn btn-info mx-1 " data-toggle="collapse" data-target="#{{id}}" aria-expanded="true" aria-controls="collapseOne">
            Show Students
        </button>
        <div style="display:inline">
            <a href="/classes/edit/{{id}}" class="btn btn-dark mx-1">Edit Class</a>
        </div>
        <form action="/classes/{{id}}?_method=DELETE" method="POST" class="mx-1" style="display:inline">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger " value="Delete">
        </form>
    </div>
</div>

<div class="card card-body mb-2  d-sm-flex d-md-none">
    <div class="p-2">
        <h2>{{title}}</h2>
        <p>{{semester}}</p>
    </div>
    <div class="p-4 flex-row">
        <button class="btn btn-success mx-1" data-toggle="collapse" data-target="#{{id}}add" aria-expanded="true" aria-controls="collapseOne">
            <i class="fa fa-user-plus"></i>
        </button>
        <div style="display:inline">
            <a href="/classes/edit/{{id}}" class="btn btn-dark mx-1">
                <i class="fa fa-edit"></i>
            </a>
        </div>
        <button class="btn btn-info mx-1" data-toggle="collapse" data-target="#{{id}}" aria-expanded="true" aria-controls="collapseOne">
            <i class="fa fa-list"></i>
        </button>
        <form action="/classes/{{id}}?_method=DELETE" method="POST" class="mx-1" style="display:inline">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger " value="Delete">
                <i class="fa fa-ban"></i>
            </button>
        </form>
    </div>
</div>

<div id="{{id}}add" class="collapse" aria-labelledby="heading{{id}}add" data-parent="#accordion">
    <div class="card-body flex-row">
        <form action="/classes/" method="POST" class="col-sm-10" style="display:inline">
            <input type="hidden" name="_method" value="POST">
            <button class="btn btn-danger " value="Delete">
                <i class="fa fa-ban"></i>
            </button>
        </form>
    </div>
</div>
<div id="{{id}}" class="collapse" aria-labelledby="heading{{id}}" data-parent="#accordion">
    <div class="card-body">
        {{#if students}}
        <table class="table table-hover table-bordered student-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Student Id</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Student Id</th>
                    <th scope="col"></th>
                </tr>
            </tfoot>
            <tbody>
                {{#each students}}
                <tr scope="row">
                    <td>{{firstName}}</td>
                    <td>{{lastName}}</td>
                    <td>{{grade}}</td>
                    <td>{{studentId}}</td>
                    <td>
                        <form action="/students/{{students.id}}?_method=DELETE" method="POST" class="text-center">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="submit" class="btn btn-danger" value="Remove">
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p>No students in this class.</p>
        {{/if}}
    </div>
</div>
{{else}}
<p>No classes</p>
{{/each}}